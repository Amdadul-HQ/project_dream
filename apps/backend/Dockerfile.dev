# Development Dockerfile for Nest.js backend
FROM node:22-alpine

WORKDIR /app

# Install dependencies
RUN corepack enable pnpm

# Copy package files
COPY package.json ./

# Install dependencies
RUN pnpm install

# Copy source code
COPY . .

# Expose port
EXPOSE 3001

# Start development server
CMD ["pnpm", "start:dev"]
